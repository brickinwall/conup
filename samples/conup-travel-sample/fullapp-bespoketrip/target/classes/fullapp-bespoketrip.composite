<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           targetNamespace="http://tuscanyscatours.com/"
           xmlns:tuscany="http://tuscany.apache.org/xmlns/sca/1.1"
           name="fullapp-bespoketrip">
    
    <component name="HotelPartner">
        <implementation.java class="com.tuscanyscatours.hotel.impl.HotelImpl"/>
        <service name="Search" requires="trace" policySets="traceBindingPolicySet">
			<tuscany:binding.jsonrpc uri="http://10.0.2.15:12301/HotelPartner/Search" />
        </service>
        <service name="Book" requires="trace" policySets="traceBindingPolicySet">
        	<tuscany:binding.jsonrpc uri="http://10.0.2.15:12301/HotelPartner/Book" />
        </service>
    </component>  
    
    <component name="FlightPartner">
        <implementation.java class="com.tuscanyscatours.flight.impl.FlightImpl"/>
        <service name="Search" requires="trace" policySets="traceBindingPolicySet">
            <tuscany:binding.jsonrpc uri="http://10.0.2.15:12302/FlightPartner/Search" />
        </service>
        <service name="Book" requires="trace" policySets="traceBindingPolicySet">
        	<tuscany:binding.jsonrpc uri="http://10.0.2.15:12302/FlightPartner/Book" />
        </service>
    </component>
    
    <component name="CarPartner">
        <implementation.java class="com.tuscanyscatours.car.impl.CarImpl"/>
        <service name="Search" requires="trace" policySets="traceBindingPolicySet">
            <tuscany:binding.jsonrpc uri="http://10.0.2.15:12303/CarPartner/Search"/>
        </service>
        <service name="Book" requires="trace" policySets="traceBindingPolicySet">
        	<tuscany:binding.jsonrpc uri="http://10.0.2.15:12303/CarPartner/Book" />
        </service>
    </component>

</composite>
